<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/versionView"
        android:text="----"
        android:textIsSelectable="true"
        android:lines="6"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Расписание"
        android:drawableStart="@drawable/guap_favicon_raw"
        android:drawableLeft="@drawable/guap_favicon_raw"
        android:id="@+id/open_table"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Группа Вконтакте"
        android:drawableLeft="@drawable/vk_icon_raw"
        android:id="@+id/open_vk"/>

    <!--Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GooglePlay"
        android:drawableLeft="@drawable/vk_icon_raw"
        android:id="@+id/open_google_play" /-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почта"
        android:drawableLeft="@drawable/mail_icon_raw"
        android:id="@+id/open_email"/>
</LinearLayout>

